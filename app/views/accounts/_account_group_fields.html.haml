.account_group
  %span.title= t 'activerecord.models.account_group'
  .fields
    = f.input :title
    = f.input :account_type, :collection=>{t('account_type.type1')=>1, t('account_type.type2')=>2, t('account_type.type3')=>3, t('account_type.type4')=>4}, :include_blank=>false
  .clear
  %table.accounts
    %tr
      %th Nummer
      %th Beskrivning
      %th Ingående balans (SEK)
      %th
    = f.simple_fields_for :accounts do |fa|
      = render 'account_fields', :f => fa
  =link_to_add_fields "Lägg till konto", f, :accounts , ".accounts"


      
